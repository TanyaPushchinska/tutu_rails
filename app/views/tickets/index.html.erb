<p id="notice"><%= notice %></p>

<h1>Tickets sold</h1>

<table>
  <thead>
  <tr>
    <th>Full name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tickets.each do |ticket| %>
    <tr>
      <td><%= ticket.full_name %></td>
      <td><%= link_to 'Show', ticket %></td>
      <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
      <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Купити квиток', new_ticket_path %>
<br>
<%= link_to 'Back', welcome_index_path %>

<%= render 'layouts/footer' %>