<%= form_with(model: train, local: true) do |form| %>
  <%= render 'common/errors', resource: @train %>

  <div class="field">
    <%= form.label :number %>
    <%= form.number_field :number %>
  </div>

  <div class="field">
    <%= form.label :route, 'Поточний маршрут' %>
    <%= form.collection_select(:route_id, Route.all, :id, :title) %>
  </div>

  <div class="field">
    <%= form.label :railway_station, 'Поточна станція' %>
    <%= form.collection_select(:railway_station_id, RailwayStation.all, :id, :title) %>
  </div>

  <div class="actions">
    <%= form.submit "#{train.new_record? ? 'Create' : 'Update' }" %>
  </div>
<% end %>

