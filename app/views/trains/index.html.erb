<h1>Trains</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trains.each do |train| %>
      <tr>
        <td><%= train.number %></td>
        <td><%= link_to t('common.show'), train %></td>
        <td><%= link_to t('common.edit'), edit_train_path(train) %></td>
        <td><%= link_to t('common.destroy'), train, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Train', new_train_path %>
<br>
<%= link_to 'Back', welcome_index_path %>

<%= render 'layouts/footer' %>

