<h1>Routes</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @routes.each do |route| %>
    <tr>
      <td><b><%= route.title %></b></td>
      <ul>
        <% route.railway_stations.each do |railway_station| %>
          <td><li><%= railway_station.title %></li></td>
        <% end %>
      </ul>
      <td><%= link_to 'Show', route %></td>
      <td><%= link_to 'Edit', edit_route_path(route) %></td>
      <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Route', new_route_path %>
<br>
<%= link_to 'Back', welcome_index_path %>

<%= render 'layouts/footer' %>

