<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.title_one') %>:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @railway_stations.each do |railway_station| %>
      <tr>
        <td><b><%= railway_station.title %></b></td>
        <td><%= link_to t('common.show'), railway_station %></td>
        <td><%= link_to t('common.edit'), edit_railway_station_path(railway_station) %></td>
        <td><%= link_to t('common.destroy'), railway_station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.add_station'), new_railway_station_path %>
<br>
<%= link_to t('common.back'), welcome_index_path %>

<%= render 'layouts/footer' %>
