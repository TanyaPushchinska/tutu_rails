<%= form_with(model: railway_station, local: true) do |form| %>
  <%= render 'common/errors', resource: @railway_station %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :route, 'Current route' %>
    <%= form.collection_select(:route_id, Route.all, :id, :title) %>
  </div>

  <div class="field">
    <%= form.label :train, 'Train' %>
    <%= form.collection_select(:train_id, Train.all, :id, :number) %>
  </div>

  <div class="actions">
    <%= form.submit "#{railway_station.new_record? ? 'Create' : 'Update' }" %>
  </div>
<% end %>
